# StudX Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =================================
# SUPABASE CONFIGURATION (REQUIRED)
# =================================
# Get these from: https://app.supabase.com/project/[your-project]/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://vdpmumstdxgftaaxeacx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =================================
# GOOGLE MAPS API (OPTIONAL - FOR ENHANCED LOCATION)
# =================================
# Get from: https://console.cloud.google.com/apis/credentials
# Required APIs: Geolocation API, Geocoding API
# Benefits: Precise location detection (10-50m vs 5km), local area detection
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =================================
# GOOGLE MAPS SETTINGS (OPTIONAL)
# =================================
# Region and language settings for better local results
NEXT_PUBLIC_GOOGLE_MAPS_REGION=IN
NEXT_PUBLIC_GOOGLE_MAPS_LANGUAGE=en

# =================================
# DEVELOPMENT SETTINGS (OPTIONAL)
# =================================
# For development debugging
NODE_ENV=development
NEXT_PUBLIC_DEBUG_LOCATION=false
